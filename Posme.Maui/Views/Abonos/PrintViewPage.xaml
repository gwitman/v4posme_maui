<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Posme.Maui.Views.Abonos.PrintViewPage"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PdfViewer;assembly=Syncfusion.Maui.PdfViewer"
             xmlns:abonos="clr-namespace:Posme.Maui.ViewModels.Abonos">
    <ContentPage.BindingContext>
        <abonos:PrintViewViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
            <syncfusion:SfPdfViewer
                x:Name="PdfViewer"
                DocumentSource="{Binding DocumentStream}">
                <Button Text="Print" 
                        Command="{Binding Source={x:Reference PdfViewer},Path=PrintDocumentCommand}"/>
            </syncfusion:SfPdfViewer>
            
    </ContentPage.Content>
</ContentPage>