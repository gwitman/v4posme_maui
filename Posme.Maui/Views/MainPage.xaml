       xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
       ios:Page.UseSafeArea="true"
       x:Class="Posme.Maui.Views.MainPage">
    <Shell.FlyoutHeader>
        <Image Source="pm_png_144px.png" />
    </Shell.FlyoutHeader>
    <FlyoutItem Title="Inicio" Icon="basic_home.svg">
        <ShellContent Title="Inicio" Icon="basic_home.svg"
                      ContentTemplate="{DataTemplate local:AboutPage}" />

        <ShellContent Title="Abono" Icon="coin.svg"
                      ContentTemplate="{DataTemplate local:ChartsPage}" />
        
        <ShellContent Title="Factura" Icon="invoice.svg"
                      ContentTemplate="{DataTemplate local:ChartsPage}" />
        
